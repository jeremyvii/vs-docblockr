{
  "name": "vs-docblock",
  "displayName": "VS DocBlockr",
  "description": "Manages docblocks with Visual Studio Code",
  "version": "0.1.8",
  "publisher": "jeremyljackson",
  "icon": "assets/logo.png",
  "repository": {
    "url": "https://github.com/jeremyvii/vs-docblockr"
  },
  "engines": {
    "vscode": "^1.14.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:php",
    "onLanguage:typescript"
  ],
  "main": "./out/src/extension",
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "contributes": {
    "commands": [
      {
        "command": "vs-docblockr.init",
        "title": "DocBlockr - Parse"
      }
    ],
    "configuration": [
      {
        "title": "Column spacing",
        "properties": {
          "vs-docblockr.columnSpacing": {
            "type": "number",
            "default": 2,
            "description": "Minimum number of spaces between columns"
          }
        }
      },
      {
        "title": "Default return type",
        "properties": {
          "vs-docblockr.defaultReturnTag": {
            "type": "boolean",
            "default": true,
            "description": "Whether or not to display a return tag"
          }
        }
      },
      {
        "title": "PHP - Use mixed for union types",
        "properties": {
          "vs-docblockr.phpMixedUnionTypes": {
            "type": "boolean",
            "default": false,
            "description": "If true try use `mixed` for union types (e.g. `string|null`)"
          }
        }
      }
    ]
  },
  "devDependencies": {
    "@types/mocha": "^5.2.0",
    "@types/node": "^10.0.0",
    "mocha": "^5.1.1",
    "typescript": "*",
    "vscode": "^1.1.18",
    "xregexp": "^4.1.1"
  },
  "dependencies": {
    "character-parser": "*",
    "is-expression": "*",
    "npm": "^6.1.0",
    "tsc": "*"
  }
}
